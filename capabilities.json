            "conditions": [
                { "axis": { "max": 1 }, "category": { "min": 1, "max": 1 }, "measure": { "max": 1 }, "target": { "max": 1 }, "targetRangeMin": { "max": 1 }, "targetRangeMax": { "max": 1 } },
