            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    }
                },
                "values": {
                    "group": {
                        "by": "axis",
                        "select":[
                            { "bind": { "to": "measure" } },
                            { "bind": { "to": "target" } },
                            { "bind": { "to": "targetRangeMin" } },
                            { "bind": { "to": "targetRangeMax" } }
                        ]
                    }
                }
            }
        }
    ],
    
